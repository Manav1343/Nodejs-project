<%- include('../components/header') -%>
<div class="col-6 mx-auto my-5 p-5 shadow">
    <form action="/api/movie" method="post" enctype="multipart/form-data">
        <h2 class="text-center text-info">Add Form</h2>
        <div class="mt-4">
            <label for="movie name" class="text-info">Movie Name</label>
            <input type="text" name="moviename" class="form-control">
        </div>
        <div class="mt-4">
            <label for="movie date" class="text-info">Movie Date</label>
            <input type="date" name="moviedate" class="form-control">
        </div>
        <div class="mt-4">
            <label for="" class="text-info">Movie Poster</label>
            <input type="file" name="movieposter" class="form-control">
        </div>
        <div class="mt-4">
           <label for="" class="text-info">Discription</label>
           <textarea name="moviediscription" class="form-control" id="subject" placeholder="Write something.."></textarea>
        </div>
        <div class="mt-4">
          <button class="btn btn-info form-control" >Submit</button>
        </div>
    </form>
</div>